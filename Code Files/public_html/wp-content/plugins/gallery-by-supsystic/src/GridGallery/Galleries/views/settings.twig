{% macro showFewIconsBy(settings, form, isCaptionBuilder) %}

	{% set isShowRow = 0 %}
	{% if(settings.captionBuilder.enabled == 1 and isCaptionBuilder == 1) %}
		{% set isShowRow = 1 %}
	{% elseif (settings.captionBuilder.enabled != 1 and isCaptionBuilder != 1) %}
		{% set isShowRow = 1 %}
	{% endif %}
    {% set showDownIcon = '' %}
    {% if (settings.captionBuilder.enabled != 1 and isCaptionBuilder != 1) %}
        {% set showDownIcon = form.show_tooltip('downloadIconPro') %}
    {% endif %}

	{% if isShowRow == 1 %}
		{{
			form.row(
				translate('Show few icons by'),
				form.select(
					'icons[showFewIcons]',
					{
						'default': translate('Default'),
						'params': translate('By params')
					},
					settings.icons.showFewIcons | default('default'),
					{ 'style': 'width: auto;', 'id' : 'showFewIconsSel'}
				),
				'capt-showt-few-icons-by',
				'h4'
			)
		}}
		{{
			form.row(
				'',
				form.checkbox(
					'icons[isVideoIcon]',
					'1',
					{'id': 'showVideoIconInp', 'class': 'sggCheckboxInOneRow' } | merge(settings.icons.isVideoIcon == 1 ? {'checked':'checked'} : {})
				) ~ form.label(
					translate('Show video icon, if exists'),
					'showVideoIconInp',
					{'class': 'sggCheckboxLabelInOneRow'}
				) ~
				form.checkbox(
					'icons[isLinkIcon]',
					'1',
					{'id': 'showLinkIconInp', 'class': 'sggCheckboxInOneRow' } | merge(settings.icons.isLinkIcon == 1 ? {'checked':'checked'} : {})
				) ~ form.label(
					translate('Show link icon, if exists'),
					'showLinkIconInp',
					{'class': 'sggCheckboxLabelInOneRow'}
				) ~
				form.checkbox(
					'icons[isPopupIcon]',
					'1',
					{'id': 'showPopupIconInp', 'class': 'sggCheckboxInOneRow' } | merge(settings.icons.isPopupIcon == 1 ? {'checked':'checked'} : {})
				) ~ form.label(
					translate('Show popup'),
					'showPopupIconInp',
					{'class': 'sggCheckboxLabelInOneRow'}
				) ~
                form.checkbox(
                    'icons[isDownloadIcon]',
                    '1',
                    {'id': 'showDownloadIconInp', 'class': 'sggCheckboxInOneRow' } | merge(settings.icons.isDownloadIcon == 1 and settings.captionBuilder.enabled == 1 ? {'checked':'checked'} : {}) | merge(settings.captionBuilder.enabled != 1 and isCaptionBuilder != 1 ? {'data-disabled':'disabled'} : {})
                ) ~ form.label(
                    translate('Show download'),
                    'showDownloadIconInp',
                    {'class': 'sggCheckboxLabelInOneRow'}
                ) ~ showDownIcon,
				'capt-showv-few-icons-by',
				null,
				'sggFewIconsShowingRow'
			)
		}}
	{% endif %}
{% endmacro %}
